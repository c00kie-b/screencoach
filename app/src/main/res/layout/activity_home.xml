<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.HomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/dash" />

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hi"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="#322C2B" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="385dp"
        android:layout_height="443dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="340dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/locationCard"
            android:layout_width="365dp"
            android:layout_height="137dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="365dp"
                android:layout_height="137dp"
                android:background="#F4BBBB">

                <TextView
                    android:id="@+id/locationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Adaptive Focus Zone"
                    android:textAlignment="center"
                    android:textColor="#322C2B"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="160dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12dp"
                    android:textColor="#322C2B"
                    android:textAlignment="center"
                    android:text="Enhance productivity by automatically blocking distracting apps based on your location."
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/locationImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/dash_location" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/aiCard"
            android:layout_width="365dp"
            android:layout_height="137dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toBottomOf="@id/locationCard">

            <RelativeLayout
                android:layout_width="365dp"
                android:layout_height="137dp"
                android:background="#F1E1A6">

                <TextView
                    android:id="@+id/aiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="AI Chatbot"
                    android:textColor="#322C2B"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12dp"
                    android:textColor="#322C2B"
                    android:textAlignment="center"
                    android:text="Get personalized insights, tips, and reminders to stay on track with your digital wellness goals."
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="160dp"/>

                <ImageView
                    android:id="@+id/aiImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="210dp"
                    android:src="@drawable/dash_ai" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/trackerCard"
            android:layout_width="365dp"
            android:layout_height="137dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toBottomOf="@id/aiCard">

            <RelativeLayout
                android:layout_width="365dp"
                android:layout_height="137dp"
                android:background="#C3E5AE">

                <TextView
                    android:id="@+id/trackerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="AI Screen Time Tracker"
                    android:textAlignment="center"
                    android:textColor="#322C2B"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="160dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12dp"
                    android:textColor="#322C2B"
                    android:textAlignment="center"
                    android:text="Track and manage your screen time with AI-powered insights for a balanced digital lifestyle"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/trackerImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/dash_tracker" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
